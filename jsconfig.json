{
    "compilerOptions": {
        "baseUrl": "./",
        "experimentalDecorators": true,
        "allowSyntheticDefaultImports": false,
        "paths": {
            "lib-root/*": ["src/*"],
            "lib-ui/*": ["src/components/*"],
            "root/*": ["src/*"],
            "ui/*": ["src/components/*"]
        }
    },
    "exclude": ["node_modules", "public"]
}
